<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckk"
    tools:context=".View.AddBabyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/txtiptal"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="İptal"/>

        <Button
            android:id="@+id/txtkaydet"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:text="Kaydet" />
    </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:columnCount="1"
            android:rowCount="18">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Ad :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtad"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@drawable/border_edittext"
                android:paddingLeft="12dp"
                android:singleLine="true"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Doğum Tarihi :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtdogumTarihi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:inputType="date"
                android:background="@drawable/border_edittext"
                android:paddingLeft="12dp"
                android:singleLine="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Cinsiyet :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cinsiet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/border_edittext"
                android:paddingLeft="12dp"
                android:singleLine="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Gebelik Yaşı :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/gebelikYasi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:inputType="date"
                android:background="@drawable/border_edittext"
                android:paddingLeft="12dp"
                android:singleLine="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Ağirlik :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/agirlik"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:inputType="number"
                android:background="@drawable/border_edittext"
                android:paddingLeft="12dp"
                android:singleLine="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Uzunluk :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/uzunluk"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:inputType="number"
                android:background="@drawable/border_edittext"
                android:paddingLeft="12dp"
                android:singleLine="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Kafa Uzunluk :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/kafaUzunluk"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:inputType="number"
                android:background="@drawable/border_edittext"
                android:paddingLeft="12dp"
                android:singleLine="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="İlişkiler :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/iliskiler"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/border_edittext"
                android:paddingLeft="12dp"
                android:singleLine="true"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg"
                    android:scaleType="fitXY" />
                <Button
                    android:id="@+id/pick_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resim Seç"
                    android:padding="20dp"
                    android:textSize="20dp"/>
            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>