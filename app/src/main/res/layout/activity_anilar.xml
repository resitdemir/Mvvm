<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diary1"
    tools:context=".View.AnilarActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/aniiptal"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="İptal"
            android:textSize="20dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/anioku"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Oku"
            android:textSize="20dp"
            android:layout_marginLeft="150dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/anikaydet"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:text="Kaydet"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Değerli Anılar"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/txt_anilar"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:layout_row="1"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Değerli anılarınızı yazabilirsiniz"
            android:inputType="textMultiLine"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="187dp"
        android:layout_marginLeft="50dp"
        android:layout_gravity="center"
        android:layout_marginRight="50dp">

        <TextView
            android:id="@+id/anilar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"/>

    </LinearLayout>

</LinearLayout>