<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diary3"
    android:orientation="vertical"
    tools:context=".View.DiaryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/diaryiptal"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="İptal"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/diaryoku"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Oku"
            android:textSize="20dp"
            android:layout_marginLeft="150dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/diarykaydet"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:text="Kaydet"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_marginTop="60dp"
        android:columnCount="1"
        android:orientation="vertical"
        android:rowCount="4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="bg1" />

            <Button
                android:id="@+id/bg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:text="bg2" />

            <Button
                android:id="@+id/bg3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="bg3" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_diary"
            android:layout_width="303dp"
            android:layout_height="183dp"
            android:layout_row="1"
            android:layout_margin="40dp"
            android:background="@color/colorPrimary"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Günlüğü yazınız"
            android:inputType="textMultiLine"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="295dp"
            android:layout_height="187dp"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="50dp">

            <TextView
                android:id="@+id/diaries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>