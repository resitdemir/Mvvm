<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/staback"
    android:orientation="vertical"
    tools:context=".View.IstatislikActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/txt_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Name"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/ist_agirlik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ağırlık"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="35dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/txt_names2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Name"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/ist_uzunluk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Uzunluk"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="35dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/txt_names3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Name"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/ist_kafauzunluk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Kafa Boyutu"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="35dp" />
    </LinearLayout>
</LinearLayout>